// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  username    String.Varchar(10)  @unique
  email       String
  password    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Profile {
  id          Int     @id @default(autoincrement())
  firstName   String.Varchar(255)
  lastName    String.Varchar(255)
  profileUrl  String
  dob         Date?
  biography   String.Varchar(120)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String.Varchar(150)
  body        String
  pictureUrl  String?
  published   Boolean   @default()
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  upvotes     Int
}

model Comment {
  id          Int       @id @default(autoincrement())
  content     String.Varchar(250)
  upvotes     Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}